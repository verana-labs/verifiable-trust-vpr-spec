{
  "dependencies": {
    "spec-up": "^0.10.8"
  },
  "name": "decentralized-trust-registry-spec",
  "version": "1.0",
  "description": "Decentralized Trust Registry v1 Specification",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verana-labs/decentralized-trust-registry-spec.git"
  },
  "license": "W3C Patent Policy (2004)",
  "homepage": "https://github.com/verana-labs/decentralized-trust-registry-spec",
  
  "bugs": {
    "url": "https://github.com/verana-labs/decentralized-trust-registry-spec/issues"
  },
  "scripts": {
    "render": "npm run build",
    "edit": "npm run dev",
    "build": "npm run clean && npm run build:specs",
    "build:specs": "node -e \"require('spec-up')({ nowatch: true })\"",
    "dev": "npm run clean && npm run dev:specs",
    "dev:specs": "node -e \"require('spec-up')()\"",
    "clean": "rm -rf build && mkdir build"
  }
}
